{
  "private": true,
  "name": "2021-fall-cs492c-team-10",
  "version": "0.0.1",
  "main": "src/index.ts",
  "author": "Team 10",
  "license": "MIT",
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.0.2",
    "prettier": "^2.4.1"
  },
  "scripts": {
    "development": "docker-compose --profile development up",
    "development:ssl": "node bin/generateSSL.js && docker-compose --profile development:ssl up",
    "development:frontend": "docker-compose --profile development up -d && docker-compose logs -f frontend",
    "development:backend": "docker-compose --profile development up -d && docker-compose logs -f backend",
    "build:development": "docker-compose --profile development build",
    "production": "docker-compose --env-file .env.production --profile production up",
    "build:production": "yarn workspace @team-10/frontend run production && mv packages/frontend/build packages/backend/public || move packages/frontend/build packages/backend/public && docker-compose --env-file .env.production --profile production build",
    "test": "yarn workspaces foreach run test",
    "dev": "yarn development",
    "dev:s": "yarn development:ssl",
    "dev:f": "yarn development:frontend",
    "dev:b": "yarn development:backend",
    "build:dev": "yarn build:development",
    "prod": "yarn production",
    "build:prod": "yarn build:production",
    "stop": "docker-compose stop",
    "down": "docker-compose down",
    "build:common": "docker build -t keonwoo/cs492c:default -f Dockerfile.workflow . && docker push keonwoo/cs492c:default",
    "commit": "yarn lint-staged && cz",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(json|css)\" --write",
    "lint": "yarn workspaces foreach run lint"
  },
  "workspaces": [
    "packages/lib",
    "packages/frontend",
    "packages/backend"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "yarn@3.1.0",
  "lint-staged": {
    "packages/frontend/**/*.+(js|jsx|ts|tsx)": [
      "yarn workspace @team-10/frontend eslint --fix",
      "yarn workspace @team-10/frontend test --bail --findRelatedTests"
    ],
    "packages/backend/**/*.+(js|jsx|ts|tsx)": [
      "yarn workspace @team-10/backend eslint --fix",
      "yarn workspace @team-10/backend test --bail --findRelatedTests"
    ],
    "packages/lib/**/*.+(js|jsx|ts|tsx)": [
      "yarn workspace @team-10/lib eslint --fix",
      "yarn workspace @team-10/lib test --bail --findRelatedTests"
    ],
    "**/*.+(json|css)": [
      "yarn prettier"
    ]
  }
}
